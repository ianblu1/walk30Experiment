-provide(:title, 'Active Participants')
.center
	= form_tag setNextDay_participants_path, method: 'put' do
		=submit_tag "Set Tomorrows' Messages", class: "btn btn-large btn-primary"
	= form_tag autoflag_participants_path, method: 'put' do
		=submit_tag "Autoflag Messages", class: "btn btn-large btn-primary"
		
		
%h1 Active Participants Only

=will_paginate

%table{:cellspacing => "5"}
	%thead
		%th ID
		%th Date
		%th PST Time
		%th Messages Sent
		%th Messages Received
		%th Flags
	%tbody
		=render :partial => "active_participant", :collection => @participants, :as => :participant


